{
  "entities": {
    "UserProfile": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "UserProfile",
      "type": "object",
      "description": "Represents a user's profile in the AutoPilot Careers application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user profile."
        },
        "firstName": {
          "type": "string",
          "description": "User's first name."
        },
        "lastName": {
          "type": "string",
          "description": "User's last name."
        },
        "email": {
          "type": "string",
          "description": "User's email address.",
          "format": "email"
        },
        "phone": {
          "type": "string",
          "description": "User's phone number."
        },
        "location": {
          "type": "string",
          "description": "User's preferred job locations."
        },
        "experience": {
          "type": "number",
          "description": "User's years of work experience."
        },
        "skills": {
          "type": "string",
          "description": "Comma-separated string of user's skills."
        },
        "linkedin": {
          "type": "string",
          "description": "URL to user's LinkedIn profile.",
          "format": "uri"
        },
        "github": {
          "type": "string",
          "description": "URL to user's GitHub or portfolio.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "firstName",
        "lastName",
        "email"
      ]
    },
    "JobApplication": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "JobApplication",
      "type": "object",
      "description": "Represents a job application logged by a user.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the job application."
        },
        "jobTitle": {
          "type": "string",
          "description": "The title of the job."
        },
        "company": {
          "type": "string",
          "description": "The company name."
        },
        "platform": {
          "type": "string",
          "description": "The platform where the job was applied for (e.g., LinkedIn, Indeed)."
        },
        "applicationDate": {
          "type": "string",
          "format": "date-time",
          "description": "The date the application was submitted."
        },
        "status": {
          "type": "string",
          "description": "The current status of the application (e.g., Applied, Interviewing, Offer, Rejected)."
        }
      },
      "required": [
        "jobTitle",
        "company",
        "platform",
        "applicationDate",
        "status"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "google.com"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information. Owned by the user identified by {userId}."
    },
    "/users/{userId}/jobApplications/{applicationId}": {
      "schema": {
        "$ref": "#/backend/entities/JobApplication"
      },
      "description": "Stores job applications logged by a specific user. Owned by the user."
    }
  }
}
